pipeline{
  agent any
 
 
  stages{
    stage('Welcome'){
      steps{
        git 'https://github.com/Mudita2806/spring-petclinic'
      }
    }
    stage('Maven Build'){
      steps{
        sh "mvn clean package"
        sh "mv target/*.jar target/petclinic.jar"
      }
    }
    stage('Tomcat Dev Deploy'){
      steps{
        sh """
          cp target/petclinic.jar /usr/share/tomcat8/webapps/
          sh /usr/share/tomcat8/bin/shutdown.sh
          sh /usr/share/tomcat8/bin/startup.sh
        """
      }
    }
  }
}
